<% layout("/layouts/bolierplate") %>

<div class="container mt-5">
    <div class="row">
        <!-- Profile Header -->
        <div class="col-12 mb-4">
            <div class="profile-header">
                <div class="profile-avatar">
                    <% if (user.profile && user.profile.avatar) { %>
                        <img src="<%= user.profile.avatar %>" alt="Profile" class="avatar-img">
                    <% } else { %>
                        <div class="avatar-placeholder">
                            <i class="fa-solid fa-user"></i>
                        </div>
                    <% } %>
                </div>
                <div class="profile-info">
                    <h1 class="profile-name">
                        <%= user.profile && user.profile.fullName ? user.profile.fullName : user.username %>
                    </h1>
                    <p class="profile-email"><i class="fa-solid fa-envelope"></i> <%= user.email %></p>
                    <% if (user.profile && user.profile.location) { %>
                        <p class="profile-location">
                            <i class="fa-solid fa-location-dot"></i> <%= user.profile.location %>
                        </p>
                    <% } %>
                    <% if (user.profile && user.profile.bio) { %>
                        <p class="profile-bio"><%= user.profile.bio %></p>
                    <% } %>
                    <a href="/profile/edit" class="btn btn-primary mt-3">
                        <i class="fa-solid fa-edit"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>

        <!-- User Bookings -->
        <div class="col-12 mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">My Bookings (<%= typeof userBookings !== 'undefined' ? userBookings.length : 0 %>)</h2>
                <a href="/bookings" class="btn btn-outline-primary">View All</a>
            </div>
            <% if (typeof userBookings === 'undefined' || userBookings.length === 0) { %>
                <div class="alert alert-info">
                    <p>You haven't made any bookings yet.</p>
                    <a href="/listings" class="btn btn-primary">Browse Listings</a>
                </div>
            <% } else { %>
                <div class="row g-4">
                    <% for(let booking of userBookings) { %>
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h5 class="card-title">
                                                <a href="/listings/<%= booking.listing._id %>" class="text-decoration-none">
                                                    <%= booking.listing.title %>
                                                </a>
                                            </h5>
                                            <p class="text-muted mb-2">
                                                <i class="fa-solid fa-location-dot"></i> 
                                                <%= booking.listing.location %><% if (booking.listing.country) { %>, <%= booking.listing.country %><% } %>
                                            </p>
                                        </div>
                                        <span class="badge <%= booking.status === 'confirmed' ? 'bg-success' : booking.status === 'cancelled' ? 'bg-secondary' : 'bg-warning' %>">
                                            <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                                        </span>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <p class="mb-1">
                                            <i class="fa-solid fa-calendar-days"></i> 
                                            <strong>Check-in:</strong> <%= new Date(booking.checkIn).toLocaleDateString() %>
                                        </p>
                                        <p class="mb-1">
                                            <i class="fa-solid fa-calendar-days"></i> 
                                            <strong>Check-out:</strong> <%= new Date(booking.checkOut).toLocaleDateString() %>
                                        </p>
                                        <p class="mb-0">
                                            <i class="fa-solid fa-users"></i> 
                                            <strong>Guests:</strong> <%= booking.guests %>
                                        </p>
                                    </div>
                                    
                                    <hr>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <p class="h5 mb-0">₹<%= booking.totalPrice.toLocaleString("en-IN") %></p>
                                            <small class="text-muted">Total amount</small>
                                        </div>
                                        <a href="/bookings/<%= booking._id %>" class="btn btn-primary btn-sm">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>

        <!-- User Listings -->
        <div class="col-12">
            <h2 class="mb-4">My Listings (<%= userListings.length %>)</h2>
            <% if (userListings.length === 0) { %>
                <div class="alert alert-info">
                    <p>You haven't created any listings yet.</p>
                    <a href="/listings/new" class="btn btn-primary">Create Your First Listing</a>
                </div>
            <% } else { %>
                <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
                    <% for(let listing of userListings){%>
                        <div class="col">
                            <a href="/listings/<%= listing._id %>" class="text-decoration-none listing-links">
                                <div class="card h-100 listing-card shadow-sm">
                                    <img src="<%=listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 20rem; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title text-dark"><%= listing.title %></h5>
                                        <p class="card-text text-muted mb-2">
                                            <i class="fa-solid fa-location-dot"></i> 
                                            <%= listing.location %><% if (listing.country) { %>, <%= listing.country %><% } %>
                                        </p>
                                        <p class="card-text mb-0">
                                            <strong class="text-dark">₹<%= listing.price.toLocaleString("en-IN") %></strong>
                                            <span class="text-muted">/night</span>
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <%}%>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.profile-header {
    display: flex;
    gap: 30px;
    padding: 30px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.profile-avatar {
    flex-shrink: 0;
}

.avatar-img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #ff385c;
}

.avatar-placeholder {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    background: linear-gradient(135deg, #ff385c, #ff6b9d);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 4px solid #ff385c;
}

.avatar-placeholder i {
    font-size: 60px;
    color: white;
}

.profile-info {
    flex: 1;
}

.profile-name {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 10px;
    color: #222222;
}

.profile-email,
.profile-location {
    color: #717171;
    margin-bottom: 8px;
    font-size: 1rem;
}

.profile-bio {
    color: #222222;
    margin-top: 15px;
    line-height: 1.6;
    font-size: 1rem;
}

@media (max-width: 768px) {
    .profile-header {
        flex-direction: column;
        text-align: center;
    }
    
    .avatar-img,
    .avatar-placeholder {
        margin: 0 auto;
    }
}
</style>

