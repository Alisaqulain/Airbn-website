<% layout("/layouts/bolierplate") %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h1 class="mb-2"><%= listingid.title %></h1>
                    <!-- Average Rating Display -->
                    <% if (typeof averageRating !== 'undefined' && averageRating > 0) { %>
                        <div class="mb-3">
                            <span class="starability-result" data-rating="<%= Math.round(averageRating) %>"></span>
                            <strong class="ms-2"><%= averageRating %></strong>
                            <span class="text-muted">(<%= listingid.reviews.length %> review<%= listingid.reviews.length !== 1 ? 's' : '' %>)</span>
                        </div>
                    <% } %>
                </div>
                <% if (currentUser && !currentUser._id.equals(listingid.owner._id)) { %>
                    <% 
                        let isInWishlist = false;
                        if (currentUser.wishlist && currentUser.wishlist.length > 0) {
                            isInWishlist = currentUser.wishlist.some(id => id.toString() === listingid._id.toString());
                        }
                    %>
                    <form action="/wishlist/<%= listingid._id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-link p-0" style="font-size: 2rem;" title="<%= isInWishlist ? 'Remove from wishlist' : 'Add to wishlist' %>">
                            <i class="fa-solid fa-heart <%= isInWishlist ? 'text-danger' : 'text-muted' %>"></i>
                        </button>
                    </form>
                <% } %>
            </div>

            <div class="card mb-4">
                <img src="<%= listingid.image.url %>" class="card-img-top" alt="<%= listingid.title %>" style="height: 500px; object-fit: cover;">
                <div class="card-body">
                    <p class="card-text"><%= listingid.description %></p>
                    <div class="mt-3">
                        <p class="mb-2">
                            <i class="fa-solid fa-location-dot"></i> 
                            <strong><%= listingid.location %></strong>
                            <% if (listingid.country) { %>, <%= listingid.country %><% } %>
                        </p>
                        <p class="mb-0">
                            <strong>₹<%= listingid.price.toLocaleString("en-IN") %></strong> / night
                        </p>
                    </div>
                    <p class="text-muted mt-2">
                        <i class="fa-solid fa-user"></i> Host: <strong><%= listingid.owner.username %></strong>
                    </p>
                </div>
            </div>

            <!-- Owner Actions -->
            <% if(currentUser && currentUser._id.equals(listingid.owner._id)) { %>
                <div class="mb-4">
                    <a href="/listings/<%= listingid._id %>/edit" class="btn btn-primary me-2">
                        <i class="fa-solid fa-edit"></i> Edit Listing
                    </a>
                    <form method="post" action="/listings/<%= listingid._id %>?_method=delete" class="d-inline">
                        <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this listing?');">
                            <i class="fa-solid fa-trash"></i> Delete Listing
                        </button>
                    </form>
                </div>
            <% } %>

            <!-- Reviews Section -->
            <hr class="my-5">
            <h2 class="mb-4">Reviews</h2>
            
            <% if(listingid.reviews && listingid.reviews.length > 0) { %>
                <div class="row g-3 mb-4">
                    <% for(review of listingid.reviews) { %>
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h5 class="card-title mb-1">
                                                <i class="fa-solid fa-user-circle"></i> <%= review.author.username %>
                                            </h5>
                                            <div class="starability-result mb-2" data-rating="<%= review.rating %>"></div>
                                        </div>
                                        <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                                            <form action="/listings/<%= listingid._id %>/reviews/<%= review._id %>?_method=delete" method="post" class="d-inline">
                                                <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this review?');">
                                                    <i class="fa-solid fa-trash"></i>
                                                </button>
                                            </form>
                                        <% } %>
                                    </div>
                                    <p class="card-text"><%= review.comments %></p>
                                    <small class="text-muted">
                                        <i class="fa-solid fa-clock"></i> 
                                        <%= new Date(review.createdAt).toLocaleDateString() %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <p class="text-muted">No reviews yet. Be the first to review!</p>
            <% } %>

            <!-- Add Review Form -->
            <% if(currentUser && !currentUser._id.equals(listingid.owner._id)) { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h3 class="card-title mb-3">Leave a Review</h3>
                        <form action="/listings/<%= listingid._id %>/reviews" method="post" novalidate class="needs-validation">
                            <div class="mb-3">
                                <label for="rating" class="form-label">Rating</label>
                                <fieldset class="starability-slot">
                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" required />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" required />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" required />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" required />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" required />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>
                            <div class="mb-3">
                                <label for="comments" class="form-label">Comments</label>
                                <textarea name="review[comments]" id="comments" class="form-control" rows="4" required></textarea>
                                <div class="invalid-feedback">Please enter a comment</div>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-paper-plane"></i> Submit Review
                            </button>
                        </form>
                    </div>
                </div>
            <% } else if (!currentUser) { %>
                <div class="alert alert-info">
                    <a href="/login" class="alert-link">Login</a> to leave a review
                </div>
            <% } %>
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h5 class="card-title">Booking</h5>
                    <p class="h4 mb-3">₹<%= listingid.price.toLocaleString("en-IN") %> <small class="text-muted">/night</small></p>
                    
                    <% if (!currentUser) { %>
                        <a href="/login" class="btn btn-danger w-100 mb-2">
                            <i class="fa-solid fa-calendar-check"></i> Reserve
                        </a>
                        <p class="text-muted small text-center">Login to book</p>
                    <% } else if (currentUser._id.equals(listingid.owner._id)) { %>
                        <button class="btn btn-danger w-100 mb-2" disabled>
                            <i class="fa-solid fa-calendar-check"></i> Reserve
                        </button>
                        <p class="text-muted small text-center">This is your listing</p>
                    <% } else { %>
                        <form action="/listings/<%= listingid._id %>/book" method="POST" id="bookingForm">
                            <div class="mb-3">
                                <label for="checkIn" class="form-label">Check-in</label>
                                <input type="date" class="form-control" id="checkIn" name="checkIn" required min="<%= new Date().toISOString().split('T')[0] %>">
                            </div>
                            <div class="mb-3">
                                <label for="checkOut" class="form-label">Check-out</label>
                                <input type="date" class="form-control" id="checkOut" name="checkOut" required>
                            </div>
                            <div class="mb-3">
                                <label for="guests" class="form-label">Guests</label>
                                <input type="number" class="form-control" id="guests" name="guests" value="1" min="1" required>
                            </div>
                            <div class="mb-3 p-3 bg-light rounded">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>₹<%= listingid.price.toLocaleString("en-IN") %> x <span id="nights">0</span> nights</span>
                                    <span id="subtotal">₹0</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <strong>Total</strong>
                                    <strong id="total">₹0</strong>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-danger w-100 mb-2">
                                <i class="fa-solid fa-calendar-check"></i> Reserve
                            </button>
                            <p class="text-muted small text-center">You won't be charged yet</p>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Map Section -->
    <div class="row mt-5">
        <div class="col-12">
            <h2 class="mb-3">Where you'll be</h2>
            <div id="map" style="height: 400px; border-radius: 12px;"></div>
        </div>
    </div>
</div>

<script>
    // Initialize map
    const map = L.map('map').setView([51.505, -0.09], 13);
    
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);
    
    // Add marker (you can update coordinates based on listing location)
    L.marker([51.505, -0.09]).addTo(map)
        .bindPopup('<%= listingid.title %><br><%= listingid.location %>')
        .openPopup();

    // Booking form functionality
    const checkInInput = document.getElementById('checkIn');
    const checkOutInput = document.getElementById('checkOut');
    const guestsInput = document.getElementById('guests');
    const nightsSpan = document.getElementById('nights');
    const subtotalSpan = document.getElementById('subtotal');
    const totalSpan = document.getElementById('total');
    const pricePerNight = <%= listingid.price %>;

    <% if (typeof bookedDates !== 'undefined' && bookedDates.length > 0) { %>
    const bookedDates = <%- JSON.stringify(bookedDates) %>;
    
    // Disable booked dates
    function isDateBooked(date) {
        const dateStr = date.toISOString().split('T')[0];
        return bookedDates.some(booking => {
            const checkIn = new Date(booking.checkIn);
            const checkOut = new Date(booking.checkOut);
            return date >= checkIn && date < checkOut;
        });
    }
    <% } %>

    function calculateTotal() {
        if (checkInInput && checkOutInput && guestsInput) {
            const checkIn = new Date(checkInInput.value);
            const checkOut = new Date(checkOutInput.value);
            
            if (checkOut > checkIn) {
                const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
                const guests = parseInt(guestsInput.value) || 1;
                const subtotal = nights * pricePerNight;
                
                nightsSpan.textContent = nights;
                subtotalSpan.textContent = '₹' + subtotal.toLocaleString("en-IN");
                totalSpan.textContent = '₹' + subtotal.toLocaleString("en-IN");
            } else {
                nightsSpan.textContent = '0';
                subtotalSpan.textContent = '₹0';
                totalSpan.textContent = '₹0';
            }
        }
    }

    if (checkInInput) {
        checkInInput.addEventListener('change', function() {
            if (checkOutInput && checkOutInput.value) {
                const minCheckOut = new Date(this.value);
                minCheckOut.setDate(minCheckOut.getDate() + 1);
                checkOutInput.min = minCheckOut.toISOString().split('T')[0];
            }
            calculateTotal();
        });
    }

    if (checkOutInput) {
        checkOutInput.addEventListener('change', calculateTotal);
    }

    if (guestsInput) {
        guestsInput.addEventListener('change', calculateTotal);
    }

    // Initialize on page load
    calculateTotal();
</script>
