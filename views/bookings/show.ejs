<% layout("/layouts/bolierplate") %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1 class="mb-4">Booking Details</h1>
            
            <div class="card mb-4">
                <div class="card-body">
                    <h3 class="card-title mb-3">
                        <a href="/listings/<%= booking.listing._id %>" class="text-decoration-none">
                            <%= booking.listing.title %>
                        </a>
                    </h3>
                    
                    <% if (booking.listing.image && booking.listing.image.url) { %>
                        <img src="<%= booking.listing.image.url %>" class="img-fluid rounded mb-3" alt="<%= booking.listing.title %>" style="max-height: 400px; width: 100%; object-fit: cover;">
                    <% } %>
                    
                    <p class="text-muted mb-3">
                        <i class="fa-solid fa-location-dot"></i> 
                        <%= booking.listing.location %><% if (booking.listing.country) { %>, <%= booking.listing.country %><% } %>
                    </p>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Check-in:</strong></p>
                            <p class="text-muted"><i class="fa-solid fa-calendar-days"></i> <%= new Date(booking.checkIn).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Check-out:</strong></p>
                            <p class="text-muted"><i class="fa-solid fa-calendar-days"></i> <%= new Date(booking.checkOut).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Guests:</strong></p>
                            <p class="text-muted"><i class="fa-solid fa-users"></i> <%= booking.guests %> guest<%= booking.guests !== 1 ? 's' : '' %></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Status:</strong></p>
                            <span class="badge <%= booking.status === 'confirmed' ? 'bg-success' : booking.status === 'cancelled' ? 'bg-secondary' : 'bg-warning' %> fs-6">
                                <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                            </span>
                        </div>
                    </div>
                    
                    <% const nights = Math.ceil((new Date(booking.checkOut) - new Date(booking.checkIn)) / (1000 * 60 * 60 * 24)); %>
                    <div class="p-3 bg-light rounded">
                        <h5>Price Breakdown</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span>₹<%= booking.listing.price.toLocaleString("en-IN") %> x <%= nights %> night<%= nights !== 1 ? 's' : '' %></span>
                            <span>₹<%= (booking.listing.price * nights).toLocaleString("en-IN") %></span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Total</strong>
                            <strong>₹<%= booking.totalPrice.toLocaleString("en-IN") %></strong>
                        </div>
                    </div>
                    
                    <% if (booking.status === 'confirmed') { %>
                        <% 
                            const today = new Date();
                            today.setHours(0, 0, 0, 0);
                            const checkInDate = new Date(booking.checkIn);
                        %>
                        <% if (checkInDate >= today) { %>
                            <form action="/bookings/<%= booking._id %>/cancel" method="POST" class="mt-3">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to cancel this booking?');">
                                    <i class="fa-solid fa-times"></i> Cancel Booking
                                </button>
                            </form>
                        <% } %>
                    <% } %>
                </div>
            </div>
            
            <a href="/bookings" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left"></i> Back to My Bookings
            </a>
            <a href="/listings/<%= booking.listing._id %>" class="btn btn-outline-primary">
                View Listing
            </a>
        </div>
    </div>
</div>

